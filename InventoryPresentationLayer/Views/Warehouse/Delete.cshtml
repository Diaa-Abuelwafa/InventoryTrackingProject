<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Warehouse</h1>

    <form asp-controller="Warehouse" asp-action="DeleteName" method="post" class="mt-4">

        <div class="form-group">
            <label for="warehouseName">Warehouse Name</label>
            <input type="text"
                   id="warehouseName"
                   name="WarehouseName"
                   class="form-control"
                   value="@Model"
                   readonly>
        </div>

        <button type="submit" class="btn btn-danger mt-3">Delete</button>
    </form>
</div>
